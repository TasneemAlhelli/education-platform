<%- include('../partials/header.ejs') %>

  
<header>
  <h2>Create Class</h2>
</header>

<div id="form">
  <form id="classForm" action="/classes/myclasses" method="POST">

    <div class="formgroup" id="name-form">
      <label for="name">Class Name</label>
      <input class="newInputs" type="text" name="name" placeholder="Class Name">
    </div>
    <br>

    <div class="formgroup" id="description-form">
      <label for="description">Description</label>
      <textarea name="description" placeholder="Class Description" cols="160" rows="5"></textarea>
  </div>
    <br>

    <div class="formgroup date">
      <div class="startDate">
        <label for="startDate">Start Date</label>
        <input type="date" name="startDate">
      </div>

      <div class="endDate">
        <label for="endDate">End Date</label>
        <input type="date" name="endDate">
      </div>
    </div>
  
    <br>
    <div class="formgroup">
      <label for="grade">grade</label>
      <select class="newInputs" name="grade">
        <option value="Primary">Primary</option>
        <option value="Intermediate">Intermediate</option>
        <option value="Secondary">Secondary</option>
      </select>
    </div>
    <br>
  
  
    <button id="submit" type="submit">Create Class</button>
  
  </form>
</div>

<%- include('../partials/footer.ejs') %>