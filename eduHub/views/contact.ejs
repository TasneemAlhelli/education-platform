<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar') %>

<header>
  <a href="/" id="backBtn">
    <i class="fa fa-arrow-left" aria-hidden="true"></i>
    Back</a>
  <h2>Contact us </h2>
</header>

<div id="form">
  <form id="classForm" action="/contact" method="POST">
    <div class="formgroup" id="name-form">
      <label for="name">From: </label>
      <% const disabled = user ? 'disabled' : ''  %>
      <input class="newInputs" type="email" name="name"  value="<%= user ? user.email : '' %>" <%= disabled %>>
    </div>

    <div class="formgroup">
      <label for="teacher">To: </label>
      <select class="newInputs" name="teacher">
        <% teachersName.forEach((tName) => { %>
          <option value="<%= tName.email %>">T. <%= tName.name %></option>
        <% }); %>
      </select>
    </div>

    <div class="formgroup" id="name-form">
      <label for="subject">Subject</label>
      <input name="subject" type="text" class="newInputs" required>
    </div>
    <br>

    <div class="formgroup" id="description-form">
      <label for="description">Description</label>
      <textarea name="description" cols="160" rows="5" required></textarea>
    </div>
    <br>

    <div class="viewBtn">
      <button id="submit" type="submit">Send</button>
    </div>
  </form>
</div>

<%- include('./partials/footer.ejs') %>